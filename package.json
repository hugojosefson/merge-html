{
  "name": "@hugojosefson/merge-html",
  "version": "1.0.1",
  "description": "CLI and module for merging 2+ .html files together.",
  "type": "module",
  "main": "./src/index.mjs",
  "bin": {
    "merge-html": "src/cli.mjs"
  },
  "files": [
    "src",
    "package.json",
    "yarn.lock",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "src/cli.mjs",
    "prepare": "npm-run-all documentation lint-readme",
    "lint": "prettier --write 'src/**/*.{js,mjs,md}' './*.{js,mjs,md}'",
    "lint-readme": "prettier --write README.md",
    "documentation": "documentation readme --markdown-toc=false --access=public --quiet --format=md --section=API src/index.mjs",
    "test": "npm-run-all lint documentation lint-readme mocha",
    "mocha": "mocha",
    "npm-audit": "npm install --package-lock-only && npm audit; rm package-lock.json"
  },
  "author": "Hugo Josefson <hugo@josefson.org> (https://www.hugojosefson.com/)",
  "repository": "hugojosefson/merge-html",
  "license": "MIT",
  "keywords": [
    "merge",
    "html",
    "cli",
    "module",
    "esmodule",
    "file",
    "files"
  ],
  "mocha": {
    "spec": "test/*-test.mjs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{mjs,js,jsx}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "documentation": "^13.0.1",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "mocha": "^7.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5"
  },
  "dependencies": {
    "@hugojosefson/env-config": "^1.3.0",
    "html-minifier-terser": "^5.1.1",
    "html2json": "^1.0.2"
  },
  "engines": {
    "node": ">=13.2.0"
  }
}
